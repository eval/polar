#!/bin/bash

set -euo pipefail

SCRIPTPATH="$( cd -- "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )"

docker rm generate-api || true

# TODO(zegl): enable runtime checks again (withoutRuntimeChecks)
# It's currently disabled as the Dashboard API requires unions/anyOf which the generator does not support.
# Unfortionately there is no way to disable it for a single service.

# --inline-schema-name-mappings are here for conflict resolution when the generator would attempt to create
# multiple types using the same name.

docker run \
    --volume "${SCRIPTPATH}":/sdk \
    --name generate-api \
    openapitools/openapi-generator-cli:v7.2.0 \
    generate \
    -i /sdk/openapi/updated.json \
    -t /sdk/openapi_templates \
    -g typescript-fetch \
    -o /sdk/src/client \
    --skip-validate-spec \
    --additional-properties=modelPropertyNaming=snake_case \
    --additional-properties=enumPropertyNaming=UPPERCASE \
    --additional-properties=supportsES6=true \
    --additional-properties=prefixParameterInterfaces=true \
    --additional-properties=withoutRuntimeChecks=true \
    --inline-schema-name-mappings Subscription_organization=Subscription_SubscriptionOganization \
    --inline-schema-name-mappings Transaction_issue_reward=Transaction_TransactionIssueReward \
    --inline-schema-name-mappings Transaction_issue_reward=Transaction_TransactionIssueReward \
    --inline-schema-name-mappings Transaction_pledge=Transaction_TransactionPledge

